rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function signedIn() { return request.auth != null; }
    function role() {
      return signedIn()
        ? get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role
        : null;
    }

    function admin() { return role() == "admin"; }
    function staff() { return role() == "staff"; }
    function teacher() { return role() == "teacher"; }

    match /users/{uid} {
      allow read: if signedIn();
      allow write: if admin() || uid == request.auth.uid;
    }

    match /invites/{id} {
      allow read, write: if admin();
    }

    match /classes/{id} {
      allow read: if signedIn();
      allow write: if admin() || staff() || teacher();
    }

    match /enrollments/{id} {
      allow read: if signedIn();
      allow write: if admin() || staff() || teacher();
    }

    match /attendance/{id} {
      allow read: if signedIn();
      allow write: if admin() || staff() || teacher();
    }

    match /grades/{id} {
      allow read: if signedIn();
      allow write: if admin() || staff() || teacher();
    }

    match /certificates/{id} {
      allow read: if signedIn();
      allow write: if admin() || staff() || teacher();
    }
  }
}
